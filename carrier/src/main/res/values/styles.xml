<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PanelTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/panel_title_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/panel_title_text_color</item>
    </style>

    <style name="PanelIconStyle" parent="TransparentButtonStyle">
        <item name="android:layout_width">@dimen/panel_icon_width</item>
        <item name="android:layout_height">@dimen/panel_icon_height</item>
    </style>

</resources>
