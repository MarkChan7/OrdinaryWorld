<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="48dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/font_list_item_aciv"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/font_list_item_acib"
        style="@style/TransparentButtonStyle"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_downloading_26dp" />

    <com.markchan.carrier.widget.ProgressWheel
        android:id="@+id/font_list_item_pw"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="9dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:pwBarColor="#707070"
        app:pwBarLength="4dp"
        app:pwBarWidth="2dp"
        app:pwRimColor="@android:color/transparent"
        app:pwRimWidth="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ccc" />
</RelativeLayout>