<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_size_vp_item_space"
        android:layout_alignLeft="@+id/text_size_vp_item_rl_text_size_root"
        android:gravity="start"
        android:text="@string/text_panel_text_size" />

    <android.support.v4.widget.Space
        android:id="@id/text_size_vp_item_space"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_above="@+id/text_size_vp_item_rl_text_size_root"
        android:layout_alignLeft="@+id/text_size_vp_item_rl_text_size_root" />

    <RelativeLayout
        android:id="@id/text_size_vp_item_rl_text_size_root"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/text_size_vp_item_btn_small"
                style="@style/TransparentButtonStyle"
                android:layout_width="@dimen/text_panel_text_size_diam_large"
                android:layout_height="@dimen/text_panel_text_size_diam_large"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#ccc" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/text_size_vp_item_btn_medium"
                style="@style/TransparentButtonStyle"
                android:layout_width="@dimen/text_panel_text_size_diam_large"
                android:layout_height="@dimen/text_panel_text_size_diam_large"
                android:padding="3dp"
                android:src="@drawable/ic_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#ccc" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/text_size_vp_item_btn_standard"
                style="@style/TransparentButtonStyle"
                android:layout_width="@dimen/text_panel_text_size_diam_large"
                android:layout_height="@dimen/text_panel_text_size_diam_large"
                android:padding="2dp"
                android:src="@drawable/ic_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#ccc" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/text_size_vp_item_btn_large"
                style="@style/TransparentButtonStyle"
                android:layout_width="@dimen/text_panel_text_size_diam_large"
                android:layout_height="@dimen/text_panel_text_size_diam_large"
                android:src="@drawable/ic_text_size" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>