<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色" />

        <android.support.v4.widget.Space
                android:layout_width="4dp"
                android:layout_height="4dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/text_color_and_alpha_vp_item_btn_text_color_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/text_panel_text_color_1" />

            <Button
                    android:id="@+id/text_color_and_alpha_vp_item_btn_text_color_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/text_panel_text_color_2" />

            <Button
                    android:id="@+id/text_color_and_alpha_vp_item_btn_text_color_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/text_panel_text_color_3" />

            <Button
                    android:id="@+id/text_color_and_alpha_vp_item_btn_text_color_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/text_panel_text_color_4" />

            <Button
                    android:id="@+id/text_color_and_alpha_vp_item_btn_text_color_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/text_panel_text_color_5" />

        </LinearLayout>

        <android.support.v4.widget.Space
                android:layout_width="8dp"
                android:layout_height="8dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="透明度" />

        <android.support.v4.widget.Space
                android:layout_width="4dp"
                android:layout_height="4dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%" />

            <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/text_color_and_alpha_vp_item_sb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progress="255" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%" />

        </LinearLayout>

        <android.support.v4.widget.Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>