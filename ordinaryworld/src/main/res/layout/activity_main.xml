<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.markchan.ordinaryworld.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="pager"
            android:text="Pager"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/basicDrawText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="basicDrawText"
            android:text="Basic Draw Text"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/textAlign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="textAlign"
            android:text="Text Align"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/fontMetrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="fontMetrics"
            android:text="Font Metrics"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/textBounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="textBounds"
            android:text="Text Bounds"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/drawAtSpecPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="drawAtSpecPos"
            android:text="Draw At Specific Position"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/drawCenterAtSpecPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="drawCenterAtSpecPos"
            android:text="Draw Center At Specific Position"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/drawCenterAtRect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="drawCenterAtRect"
            android:text="Draw Center At Rect"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/staticLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="staticLayout"
            android:text="StaticLayout"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/centerStaticLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#009688"
            android:onClick="centerStaticLayout"
            android:text="Center StaticLayout"
            android:textColor="#FFFFFFFF" />

        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </LinearLayout>
</ScrollView>